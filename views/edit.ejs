<%- include("partials/header") %>
<div class="ui main text container segment">
  <div class="ui huge header">
    EDIT <%= blog.title %>
  </div>
  <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
    <div class="field">
      <label>TITLE</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>IMAGE</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <textarea name="blog[body]" required><%= blog.body %></textarea>
    </div>
    <input class="ui basic voilet big button" type="SUBMIT">
  </form>
</div>
<%- include("partials/footer") %>           
